package ch16;
import java.util.Scanner;

public class Ch16 {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.println("Please enter a number and it's power.");
        System.out.print("Number: ");
        int num = sc.nextInt();
        System.out.print("Power: ");
        int power = sc.nextInt();
        System.out.println(num+" to the power of "+power+" is "+Math.pow(num,power));     
    }    
}
